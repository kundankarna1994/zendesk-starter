{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "isolatedModules": true,
        "paths": {
            "@/*": [
                "./src/app/*"
            ]
        }
    },
    "include": [
        "src",
        "global.d.ts",
        "vite-env.d.ts"
    ],
}
